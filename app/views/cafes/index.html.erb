<p id="notice"><%= notice %></p>

<h1>Cafes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cafes.each do |cafe| %>
      <tr>
        <td><%= cafe.title %></td>
        <td><%= cafe.description %></td>
        <td><%= cafe.rating %></td>
        <td><%= link_to 'Show', cafe %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? %>
<%= link_to 'New Cafe', new_cafe_path %>
  <% else %>
<% end %>


