<h1 class="text-center"><%= pluralize(@cafes.count, "Result")%></h1>

<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
                <th><%= sort_link(@query, :description, "Description", default_order: :asc) %></th>
                <th><%= sort_link(@query, :rating, "Rating", default_order: :asc) %></th>
            </tr>
        </thead>
        <tbody>
            <% @cafes.each do |cafe| %>
                <tr>
                    <td><%= link_to cafe.title, cafe %></td>
                    <td><%= cafe.description.truncate_words(20) %></td>
                    <td><%= cafe.rating %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
