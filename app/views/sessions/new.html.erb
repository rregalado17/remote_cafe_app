<section class="depot_form">
    <% if flash[:alert] %>
        <aside class="notice"><%= flash[:alert] %></aside>
    <% end %>

    <%= form_tag do %>
        <h2>Log In to Remote Cafe</h2>

        <div class="col-md-4">
            <%= label_tag :username, 'Username:'  %>
            <%= text_field_tag :username, 
                params[:username], 
                class:"form-control", 
                placeholder:"Username" 
            %>
        </div>

        <div class="col-md-4">
            <%= label_tag :password, 'Password:' %>
            <%= password_field_tag :password, 
                params[:password], 
                class:"form-control", 
                placeholder:"Password"
            %>
        </div>

        <div class="actions">
            <%= submit_tag "Login", class:"btn btn-success" %>
        </div>

    <% end %> 

    <%= link_to "Sign Up", signup_path, class:"btn btn-info" %>
</section> 

