<%= form_with(model: user, data: {controller: "places", action: "google-maps-callback@window->places#initMap"}, class:"row g-3") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Enter Your Details</h3>

  <div class="col-md-6">
    <%= form.text_field :first_name, 
      class:"form-control", 
      placeholder:"First name", 
      label: :first_name 
    %>
  </div>

  <div class="col-md-6">
    <%= form.text_field :last_name, 
      class:"form-control", 
      placeholder:"Last name", 
      label: :last_name 
    %>
  </div>  
  
  <div class="col-md-6">
    <%= form.text_field :email, 
      class:"form-control", 
      placeholder:"Email",
      label: :email 
    %>
  </div>
  
  <div class="col-md-6">
    <%= form.text_field :username, 
      class:"form-control", 
      placeholder:"Choose a Username", 
      label: :username 
    %>
  </div>
  
  <div class="col-md-6">
    <%= form.text_field :original_city, 
      class:"form-control", 
      placeholder:"Residential City", 
      label: :original_city 
    %>
  </div>
  
  <div class="col-md-6">
    <%= form.text_field :current_city, 
      class:"form-control", 
      placeholder:"Current City", 
      label: :current_city 
    %>
  </div>
 
  <div class="col-md-6">
    <%= form.password_field :password, 
      class:"form-control", 
      placeholder:"Password", 
      label: :password 
    %>
  </div>
  
  <div class="col-md-6">
    <%= form.password_field :password_confirmation, 
      class:"form-control", 
      placeholder:"Confirm Password", 
      label: :password_confirmation 
    %>
  </div>
  
  <div class="col-md-6">
    <%= form.text_field :job_role, 
      class:"form-control", 
      placeholder:"Job Role", 
      label: :job_role 
    %>
  </div>

  <div class="actions">
    <%= form.submit "Create Profile", class:"btn btn-success" %>
  </div>
<% end %>
